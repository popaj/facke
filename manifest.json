{
  "manifest_version": 2,
  "name": "Facke",
  "short_name": "Facke",
  "version": "0.0.1",
  "description": "An NZZ article is provided with a suitable face.",
  "icons": {
    "32": "src/asset/icon/icon-32.png",
    "48": "src/asset/icon/icon-48.png",
    "64": "src/asset/icon/icon-64.png",
    "96": "src/asset/icon/icon-96.png"
  },
  "background": {
    "scripts": [
      "src/js/background.js"
    ],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nzz.ch/*"
      ],
      "js": [
        "src/js/content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "src/ui/options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    "src/asset/photo/*",
    "src/js/json/*.json"
  ]
}